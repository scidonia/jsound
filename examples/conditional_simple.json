{
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "age": {
      "type": "integer",
      "minimum": 0
    }
  },
  "if": {
    "properties": {
      "age": {
        "minimum": 18
      }
    }
  },
  "then": {
    "properties": {
      "name": {
        "pattern": "^[A-Z]"
      }
    }
  },
  "else": {
    "properties": {
      "name": {
        "pattern": "^[a-z]"
      }
    }
  }
}